cat <<EOF
---
apiVersion: policy.open-cluster-management.io/v1
kind: Policy
metadata:
  name: signature-ocp4
  namespace: policies
spec:
  disabled: false
  remediationAction: enforce
  policy-templates:
  - objectDefinition:
      apiVersion: policy.open-cluster-management.io/v1
      kind: ConfigurationPolicy
      metadata:
        name: signature-ocp4
      spec:
        object-templates:
        - complianceType: musthave
          objectDefinition:
$(oc create -f $SIGNATURE --dry-run=client -oyaml | sed 's/^\([ a-z]\)/    \1/g;s/---/- complianceType: musthave\n  objectDefinition:/g' | sed 's/^/        /g')
EOF
